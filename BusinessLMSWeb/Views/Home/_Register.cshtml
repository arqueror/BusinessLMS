@model BusinessLMSWeb.Models.Contact
@using BusinessLMSWeb.Helpers

<div class="main-container">
    
    <div class="container1">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <div class="block">
            <div class="editor-label">Who told you about us?</div>
            <div id="divIboName"><input type="text" name="iboName" id="iboName" value="@ViewBag.iboName" /></div>
            <div class="editor-label"><h2>IBO Number</h2></div>
            <div id="iboNum">@ViewBag.IBONum</div>
            <div class="editor-label"><h2>Email</h2></div>
            <div id="iboEmail">@ViewBag.email</div>
            <div class="editor-label"><h2>Phone</h2></div>
            <div id="iboPhone">@ViewBag.phone</div>
        </div>
        <div class="block">
            <fieldset>
                <legend>Contact</legend>

                <div class="editor-label">
                    @Html.LabelFor(model => model.firstName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.firstName)
                    @Html.ValidationMessageFor(model => model.firstName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.lastName)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.lastName)
                    @Html.ValidationMessageFor(model => model.lastName)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.email)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.email)
                    @Html.ValidationMessageFor(model => model.email)
                </div>

                <div class="alignright">
                    <input type="submit" value="Register" />
                </div>
            </fieldset>
        </div>
        
        @Html.HiddenFor(model => model.IBONum)
        
    }
    </div>
</div>

@Html.Script(
    @<script type="text/javascript" src="~/Scripts/Home/Register.js"></script>
)